<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="25dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="3dp"
    android:id="@+id/HistItemCardView"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:animateLayoutChanges="true"
         android:orientation="vertical"
         >

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:padding="6dp">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentTop="true"
                 android:layout_marginTop="7dp"
                 android:orientation="vertical">

                 <ImageView
                     android:id="@+id/trashImageView"
                     android:layout_gravity="right"
                     android:layout_width="wrap_content"
                     android:layout_height="match_parent"
                     android:src="@drawable/ic_uil_trash_alt"
                     android:layout_marginEnd="10dp"/>

                 <TextView
                     android:id="@+id/NombreCompletoTextView"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginBottom="2dp"
                     android:fontFamily="@font/muli_black"
                     android:text="Ezequiel Murcia Gines Roca"
                     android:textColor="@color/black_primary"
                     android:textSize="18sp"
                     android:gravity="center"
                     />


                 <TextView
                     android:id="@+id/JubilacionTextView"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="11dp"
                     android:fontFamily="@font/muli"
                     android:text="Edad de jubilación: 65"
                     android:textColor="@color/pure_black"
                     android:textSize="18sp"
                     />

                 <TextView
                     android:id="@+id/SBCTextView"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/muli"
                     android:text="S.B.C: $123.00"
                     android:textColor="@color/pure_black"
                     android:textSize="18sp"
                     />
                 <TextView
                     android:id="@+id/PensionTextView"
                     android:layout_width="match_parent"
                     android:gravity="center"
                     android:layout_marginTop="4dp"
                     android:layout_height="wrap_content"
                     android:fontFamily="@font/muli_bold"
                     android:paddingBottom="10dp"
                     android:text="Pensión: $1,265.00"
                     android:textColor="@color/pure_black"
                     android:textSize="20sp"
                     />

             </LinearLayout>
         </RelativeLayout>

     </LinearLayout>

</com.google.android.material.card.MaterialCardView>






